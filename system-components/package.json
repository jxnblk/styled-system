    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "emotion": "^9.2.3",
    "jest": "^23.3.0",
    "jest-styled-components": "^5.0.1",
    "mdx-go": "^1.0.10",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-emotion": "^9.2.3",
    "react-test-renderer": "^16.4.1",
